{# templates/registration/step2.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Onbaording - Step 2{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Step 2: Address Information</h3>
                </div>
                <div class="card-body">
                    {% for flash_error in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ flash_error }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                    
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.addressLine1) }}
                            {{ form_widget(form.addressLine1) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.addressLine1) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.addressLine2) }}
                            {{ form_widget(form.addressLine2) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.addressLine2) }}
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="mb-3 mb-md-0">
                                    {{ form_label(form.city) }}
                                    {{ form_widget(form.city) }}
                                    <div class="form-text text-danger">
                                        {{ form_errors(form.city) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div>
                                    {{ form_label(form.postalCode) }}
                                    {{ form_widget(form.postalCode) }}
                                    <div class="form-text text-danger">
                                        {{ form_errors(form.postalCode) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.state) }}
                            {{ form_widget(form.state) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.state) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.country) }}
                            {{ form_widget(form.country) }}
                            <div class="form-text text-danger">
                                {{ form_errors(form.country) }}
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('onboarding_first_step') }}" class="btn btn-secondary">Back</a>
                            <button type="submit" class="btn btn-primary">Next Step</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
